{{#each lists}}
<div id="list-{{id}}">
  <style>
    @scope {
      :scope {
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        box-shadow: 2px 4px 4px rgba(0, 0, 0, 0.25);
        background-color: white;
      }

      a {
        text-decoration: none;
        color: #000;
      }

      header {
        padding: 0 .8rem;
        background-color: #ddd;
        border-radius: 8px 8px 0 0;
      }

      footer {
        display: flex;
        justify-content: space-between;
        height: 40px;
      }

      footer :nth-child(1) {
        border-radius: 0 0 0 8px;
      }

      footer :nth-last-child(1) {
        border-radius: 0 0 8px 0;
      }

      footer .button {
        flex-grow: 1;
        border: solid 1px hsl(0, 0%, 80%);
        justify-content: center;
        align-items: center;
        display: flex;
        cursor: pointer;
      }

      footer .button svg {
        width: 24px;
        height: 24px;
        stroke: hsl(0, 0%, 30%);
      }
    }
  </style>
  <header>
    <a href="/list/{{id}}">
      <h2>{{title}}</h2>
    </a>
  </header>
  <footer>
    <a class="button" href="/list/{{id}}/kml" download="{{title}}.kml">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M16.5 12 12 16.5m0 0L7.5 12m4.5 4.5V3" />
      </svg>
    </a>
    <div class="button" hx-get="/list/{{id}}/edit" hx-target="#list-{{id}}" hx-swap="outerHTML">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
      </svg>
    </div>
    <div class="button" hx-delete="/list/{{id}}" hx-target="#list-{{id}}" hx-swap="outerHTML"
      hx-confirm="Are you sure you want to delete '{{title}}'?">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
      </svg>
    </div>
  </footer>
</div>
{{/each}}