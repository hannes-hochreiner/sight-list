<?xml version="1.0" encoding="utf-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
  <Document>
    <name>{{title}}</name>
    {{#each sights}}
    <Placemark>
      <name>{{title}}</name>
      <description>
        {{description}}
      </description>
      <Point>
        <coordinates>{{long}},{{lat}}</coordinates>
      </Point>
    </Placemark>
    {{/each}}
  </Document>
</kml>